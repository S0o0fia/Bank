<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="com.example.safaanabil.bank.Menu">

    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_centerHorizontal="true"
        android:layout_marginBottom="60dp"
        android:alpha="0.1"
        android:background="@android:color/white">

        <RelativeLayout
            android:id="@+id/profilelayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="3dp"

            android:background="@color/colorPrimary"
            >

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/profile" />

            <TextView

                android:id="@+id/profiletext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:shadowColor="@android:color/white"
                android:text="My Profile"
                android:textColor="@android:color/black"

                android:textSize="32sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/transayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/profilelayout"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/trans" />

            <TextView
                android:id="@+id/transtext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:shadowColor="@android:color/white"
                android:text="    My Transactions"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/callayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/transayout"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/location_icon2" />

            <TextView
                android:id="@+id/calltext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:shadowColor="@android:color/white"
                android:text="Find us"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold"

                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/logoutlayout"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@id/callayout"
           android:layout_marginTop="3dp"
            android:background="@color/colorPrimary"
            >
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:src="@drawable/logout" />

            <TextView
                android:id="@+id/Logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:shadowColor="@android:color/white"
                android:text="Logout"
                android:textColor="@android:color/black"
                android:textSize="32sp"
                android:textStyle="bold"

                />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>
